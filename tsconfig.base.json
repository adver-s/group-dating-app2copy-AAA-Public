{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "dom",
      "dom.iterable",
      "ES2020",
      "ES2021"
    ],
    "skipLibCheck": true,
    "strict": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "incremental": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/utils/*": ["./utils/*"],
      "@/types": ["./types/index"],
      "@/types/*": ["./types/*", "./apps/web/types/*"],
      "@/prisma": ["./apps/api/lib/prisma"],
      "@/api/*": ["./apps/api/*"],
      "@/middleware/*": ["./apps/web/middleware/*"],
      "@/app/*": ["./apps/web/app/*"],
      "@/components/*": ["./apps/web/components/*"],
      "@/lib/*": ["./apps/web/lib/*"],
      "@repo/schema": ["./packages/schema/dist/index"],
      "@repo/schema/*": ["./packages/schema/dist/*"],
      "@repo/ui": ["./packages/ui/dist/index"],
      "@repo/ui/*": ["./packages/ui/dist/*"]
    }
  }
}